<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindMe.SettingsPage"
             Title="Settings"
             BackgroundColor="#f5f5f5">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Frame BackgroundColor="White" CornerRadius="10" Padding="15">
                <StackLayout>
                    <Label Text="Telegram Settings"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="0,0,0,10"/>

                    <Label Text="Bot Token"
                       TextColor="Black"/>
                    <Entry x:Name="entryBotToken"
                       Placeholder="Enter your Telegram bot token" PlaceholderColor="Gray"
                       TextColor="Black"/>

                    <Label Text="Chat ID"
                       Margin="0,5,0,0"
                       TextColor="Black"/>
                    <Entry x:Name="entryChatId"
                       Placeholder="Enter your Telegram chat ID" PlaceholderColor="Gray"
                       TextColor="Black" Keyboard="Numeric"/>

                    <Label Text="Interval"
                       Margin="0,5,0,0"
                       TextColor="Black"/>
                    <Entry x:Name="entryInterval"
                       Placeholder="Enter your Interval in milliseconds" PlaceholderColor="Gray"
                       TextColor="Black" Keyboard="Numeric"/>

                    <Button x:Name="btnSave"
                        Text="Save Settings"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="5"
                        Margin="0,20,0,0"
                        Clicked="OnSaveClicked"/>
                </StackLayout>
            </Frame>
            <Frame BackgroundColor="White" CornerRadius="10" Padding="15">
                <StackLayout>
                    <Label Text="Current Configuration :" 
                TextColor="Black"
                FontSize="18" 
                FontAttributes="Bold"/>

                    <Label Text="Token ID :"
                Margin="0,5,0,0"
                FontAttributes="Bold"
                TextColor="Black"/>
                    <Label x:Name="txtTokenID" 
                TextColor="Black"
                Text="N/A" 
                Margin="0,5,0,0"/>

                    <Label Text="Chat ID :"
                Margin="0,5,0,0"
                FontAttributes="Bold"
                TextColor="Black"/>
                    <Label x:Name="txtChatID" 
                TextColor="Black"
                Text="N/A" 
                Margin="0,5,0,0"/>

                    <Label Text="Interval :"
                Margin="0,5,0,0"
                FontAttributes="Bold"
                TextColor="Black"/>
                    <Label x:Name="txtInterval" 
                TextColor="Black"
                Text="30" 
                Margin="0,5,0,0"/>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" Padding="15" Margin="0,15,0,0">
                <StackLayout>
                    <Label Text="Security Settings"
               FontSize="18"
               FontAttributes="Bold"
               Margin="0,0,0,10"/>

                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Text="Require passcode at startup"
                   VerticalOptions="Center"
                   TextColor="Black"/>
                        <Switch x:Name="switchPasscodeAtStartup"
                    Grid.Column="1"
                    IsToggled="True"
                    Toggled="OnPasscodeAtStartupToggled"/>
                    </Grid>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Text="Use biometric authentication"
                    VerticalOptions="Center"
                    TextColor="Black"/>
                        <Switch x:Name="switchBiometricAuth"
                    Grid.Column="1"
                    IsToggled="False"
                    Toggled="OnBiometricAuthToggled"/>
                    </Grid>

                    <Label x:Name="lblBiometricNotAvailable"
                    Text="Biometric authentication is not available on this device."
                    TextColor="#FF5252"
                    FontSize="12"
                    IsVisible="False"
                    Margin="0,5,0,0"/>

                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>

</ContentPage>